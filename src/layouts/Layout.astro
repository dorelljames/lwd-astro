---
import { Font } from 'astro:assets';
import '@/styles/global.css'

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
	canonicalURL?: URL | string;
	keywords?: string;
}

const { 
	title = "Learn with Dorell | AI Automation",
	description = "Join the AI Automation cohort and learn practical automation systems using AI tools, APIs, and custom workflows that save you hours every week.",
	ogImage = "/og-image.png",
	canonicalURL = new URL(Astro.url.pathname, Astro.site),
	keywords = "AI, automation, cohort, learning, dorell, chatgpt, n8n, apis"
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={ogImage} />
		
		<Font cssVariable="--font-inter" preload />
		<Font cssVariable="--font-roboto-serif" preload />
		
		<!-- Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Course",
				"name": "AI Automation Cohort",
				"description": "${description}",
				"provider": {
					"@type": "Person",
					"name": "Dorell James",
					"url": "https://dorelljames.com"
				}
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
